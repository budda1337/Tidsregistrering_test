@page
@model IndexModel
@{
    ViewData["Title"] = "Tidsregistrering - Ny Registrering";
}

<div class="row">
    <!-- Bruger info -->
    <div class="col-12">
        <div class="alert alert-primary">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h4><i class="bi bi-person-badge"></i> Velkommen, @Model.FullName!</h4>
                    <p class="mb-0">
                        <strong>Brugernavn:</strong> @Model.Username |
                        <strong>Afdeling:</strong> @Model.Department
                    </p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="h5 mb-0">
                        <i class="bi bi-clock"></i> Total tid: @Model.TotalHours timer @Model.TotalMinutes min
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Tidsregistrering formular -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h3><i class="bi bi-plus-circle"></i> Ny Tidsregistrering</h3>
            </div>
            <div class="card-body">

                @if (ViewData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        @ViewData["Message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="NewRegistrering.DatoUdført" class="form-label">
                            <i class="bi bi-calendar3"></i> Dato for udført arbejde
                        </label>
                        <input asp-for="NewRegistrering.DatoUdført" class="form-control" type="date" />
                        <span asp-validation-for="NewRegistrering.DatoUdført" class="text-danger"></span>
                        <small class="form-text text-muted">Valgfrit - hvis ikke angivet bruges dagens dato</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewRegistrering.Minutter" class="form-label">
                            <i class="bi bi-clock"></i> Tid brugt (minutter)
                        </label>
                        <input asp-for="NewRegistrering.Minutter" class="form-control" type="number" min="1" placeholder="fx 60" />
                        <span asp-validation-for="NewRegistrering.Minutter" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewRegistrering.Afdeling" class="form-label">
                            <i class="bi bi-building"></i> Afdeling
                        </label>
                        <select asp-for="NewRegistrering.Afdeling" class="form-select">
                            <option value="">Vælg afdeling...</option>
                            @foreach (var afdeling in Model.Afdelinger)
                            {
                                <option value="@afdeling">@afdeling</option>
                            }
                        </select>
                        <span asp-validation-for="NewRegistrering.Afdeling" class="text-danger"></span>
                    </div>

                    <!-- NYT FELT - Sagsnummer -->
                    <div class="mb-3">
                        <label asp-for="NewRegistrering.Sagsnummer" class="form-label">
                            <i class="bi bi-tag"></i> ESDH-Sagsnummer
                        </label>
                        <input asp-for="NewRegistrering.Sagsnummer" class="form-control" type="text"
                               maxlength="60" placeholder="fx SAG2025-123 (valgfrit)" />
                        <span asp-validation-for="NewRegistrering.Sagsnummer" class="text-danger"></span>
                        <small class="form-text text-muted">Valgfrit - op til 60 tegn</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewRegistrering.Bemærkninger" class="form-label">
                            <i class="bi bi-chat-left-text"></i> Bemærkninger
                        </label>
                        <textarea asp-for="NewRegistrering.Bemærkninger" class="form-control" rows="4" placeholder="Beskrivelse af arbejdet..."></textarea>
                        <span asp-validation-for="NewRegistrering.Bemærkninger" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-save"></i> Gem Registrering
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Statistik oversigt -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-bar-chart"></i> Mine Seneste Registreringer</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentRegistreringer.Any())
                {
                    @foreach (var reg in Model.RecentRegistreringer)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2 p-2 bg-light rounded">
                            <div>
                                <strong>@reg.Afdeling</strong>
                                @if (!string.IsNullOrEmpty(reg.Sagsnummer))
                                {
                                    <br>
                        
                                    <small class="text-info"><i class="bi bi-tag"></i> @reg.Sagsnummer</small>
                                }
                                <br><small class="text-muted">@reg.Dato.ToString("dd-MM-yyyy HH:mm")</small>
                            </div>
                            <span class="badge bg-primary">@reg.Minutter min</span>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">Ingen registreringer endnu</p>
                }
            </div>
        </div>

        <div class="mt-3">
            <a href="/Registreringer" class="btn btn-outline-primary w-100">
                <i class="bi bi-list-ul"></i> Se Alle Mine Registreringer
            </a>
        </div>
    </div>
</div>