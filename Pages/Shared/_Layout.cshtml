<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tidsregistrering</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tidsregistrering.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <img src="~/images/ikast-brande-logo.png" alt="Ikast-Brande Kommune" height="32" class="me-2">
                    <span><i class="bi bi-clock-history"></i> Tidsregistrering</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/" ? "active text-white bg-primary" : "text-dark")" asp-area="" asp-page="/Index">
                                <i class="bi bi-plus-circle"></i> Registrer
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/Registreringer" ? "active text-white bg-primary" : "text-dark")" asp-area="" asp-page="/Registreringer">
                                <i class="bi bi-list-ul"></i> Mine Registreringer
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/Oversigt" ? "active text-white bg-primary" : "text-dark")" asp-area="" asp-page="/Oversigt">
                                <i class="bi bi-table"></i> Oversigt
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/Statistik" ? "active text-white bg-primary" : "text-dark")" asp-area="" asp-page="/Statistik">
                                <i class="bi bi-bar-chart"></i> Statistik
                            </a>
                        </li>
                        @await Component.InvokeAsync("AdminNav")
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <span class="navbar-text text-dark">
                                <i class="bi bi-person-circle"></i>
                                @{
                                    var displayUsername = User.Identity?.Name ?? "Unknown";
                                    if (displayUsername.Contains('\\'))
                                    {
                                        displayUsername = displayUsername.Split('\\')[1];
                                    }
                                }
                                @displayUsername
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted bg-light">
        <div class="container">
            <div class="row align-items-center py-3">
                <div class="col-md-8">
                    <div class="d-flex align-items-center">
                        <img src="~/images/ikast-brande-logo.png" alt="Ikast-Brande Kommune" height="24" class="me-2">
                        <span>
                            &copy; 2025 <strong>Ikast-Brande Kommune</strong> - Internt Tidsregistreringssystem
                        </span>
                    </div>
                </div>
                <div class="col-md-4 text-md-end">
                    <span>
                        <i class="bi bi-envelope"></i> Support:
                        <a href="mailto:helpdesk@ikast-brande.dk" class="text-decoration-none">helpdesk@ikast-brande.dk</a>
                    </span>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>